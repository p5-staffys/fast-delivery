FROM node:18-alpine

ARG FIREBASE_API_KEY
ENV NEXT_PUBLIC_FIREBASE_API_KEY=$FIREBASE_API_KEY

ARG FIREBASE_AUTH_DOMAIN
ENV NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=$FIREBASE_AUTH_DOMAIN

ARG GOOGLE_MAPS_KEY
ENV NEXT_PUBLIC_GOOGLE_MAPS_KEY=$GOOGLE_MAPS_KEY

ARG PATH_TO_BACK
ENV NEXT_PUBLIC_PATH_TO_BACK=$PATH_TO_BACK

WORKDIR /app

COPY package*.json ./
COPY . .

RUN npm install

RUN npm run build

EXPOSE 3000

CMD ["npm", "start"]